<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="15dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_brand_rcv"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:src="@drawable/outfitters" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_below="@+id/image_brand_rcv"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/address_brand_rcv"
            android:layout_marginBottom="8dp"
            android:text="@string/address" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone_brand_rcv"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/phone"
            android:layout_marginStart="8dp"
            android:layout_below="@+id/address_brand_rcv"
            android:layout_marginBottom="8dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_brands"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/phone_brand_rcv"
            android:textSize="15sp"/>


    </RelativeLayout>



</android.support.v7.widget.CardView>