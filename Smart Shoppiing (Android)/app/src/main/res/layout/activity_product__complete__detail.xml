<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/backgroundlogin"
    android:layout_height="match_parent"
    tools:context=".Product_Complete_Detail">


    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/product_complete_detail_appbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/product_complete_detail_appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/outfitters"
                android:id="@+id/image_detail_activity"/>

            <ImageButton
                android:id="@+id/btn_like_detail_Activity"
                android:layout_width="117dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/transparent"
                android:src="@drawable/unlike" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_price_item"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/lllllllll">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_overlay"
                    android:textSize="25sp"
                    android:layout_marginStart="12dp"
                    android:text="@string/quantity12"/>

                <EditText
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="25sp"
                    android:text="@string/_1"
                    android:gravity="center"
                    android:textColor="@color/black_overlay"
                    android:id="@+id/quantity_complete"
                    android:inputType="number"/>

            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_name"
                android:gravity="center"
                android:id="@+id/name_detail_activity"
                android:textColor="@color/black_overlay"
                android:background="@drawable/edittextinput"
                android:textSize="25sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/edittextinput"
                android:layout_marginTop="5dp"
                android:id="@+id/price_detail_activity"
                android:text="@string/price"
                android:textColor="@color/black_overlay"
                android:textSize="25sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/edittextinput"
                android:layout_marginTop="5dp"
                android:id="@+id/id_detail_activity"
                android:text="@string/product_ida"
                android:textColor="@color/black_overlay"
                android:textSize="25sp"
                />

            <TextView
                android:id="@+id/description_detail_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittextinput"
                android:text="@string/price"
                android:padding="10dp"
                android:textColor="@color/black_overlay"
                android:textSize="20sp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_add_product_to_cart_detail_activity"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/buttons"
                android:text="@string/add_to_cart"/>
        </LinearLayout>


    </ScrollView>

</RelativeLayout>