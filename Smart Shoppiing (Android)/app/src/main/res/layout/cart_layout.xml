<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="175dp"
            android:id="@+id/image_addcart_rcv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_ida"
            android:layout_toRightOf="@+id/image_addcart_rcv"
            android:layout_marginStart="12dp"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black_overlay"
            android:id="@+id/product_id_addcart_rcv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_ida"
            android:layout_toRightOf="@+id/image_addcart_rcv"
            android:layout_marginStart="12dp"
            android:layout_below="@id/product_id_addcart_rcv"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black_overlay"
            android:id="@+id/product_name_addcart_rcv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_ida"
            android:layout_toRightOf="@+id/image_addcart_rcv"
            android:layout_below="@id/product_name_addcart_rcv"
            android:layout_marginStart="12dp"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black_overlay"
            android:id="@+id/product_price_addcart_rcv"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_addcart_rcv"
            android:layout_below="@+id/product_price_addcart_rcv"
            android:orientation="horizontal"
            android:id="@+id/linear"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_overlay"
                android:textSize="20sp"
                android:layout_marginStart="12dp"
                android:text="@string/quantity12"/>

            <TextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:id="@+id/quantity_addcart"
                />



        </LinearLayout>

        <ImageButton
            android:id="@+id/remov_from_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear"
            android:layout_marginLeft="77dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/image_addcart_rcv"
            android:src="@drawable/cancel" />





    </RelativeLayout>


</android.support.v7.widget.CardView>